<Window x:Class="MiCrud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiCrud"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Agregar Alumno" Click="Agregar_Click"/>
            <DataGrid Name="AlumnosDataGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
            <Button Content="Editar Alumno" Click="Editar_Click"/>
            <Button Content="Eliminar Alumno" Click="Eliminar_Click"/>
        </StackPanel>
    </Grid>
</Window>
