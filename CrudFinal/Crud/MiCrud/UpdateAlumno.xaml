<Window x:Class="MiCrud.UpdateAlumno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiCrud"
        mc:Ignorable="d"
        Title="UpdateAlumno" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBox Name="NombreTextBox" Text="Nombre"/>
            <TextBox Name="TelefonoTextBox" Text="Telefono"/>
            <TextBox Name="GradoTextBox" Text="Grado"/>
            <ComboBox Name="UsuarioComboBox" DisplayMemberPath="Nombre" SelectedValuePath="UsuarioID" />
            <Button Content="Actualizar" Click="Actualizar_Click"/>
        </StackPanel>
    </Grid>
</Window>
